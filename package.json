        "express": "^4.17.1",
        "express-session": "^1.16.2",
        "helmet": "^3.21.2",
        "http-status": "^1.4.0",
        "inversify": "^5.0.1",
        "joi": "^14.3.1",
        "luhn": "^2.4.0",
        "morgan": "^1.9.1",
        "reflect-metadata": "^0.1.13",
        "ts-mockito": "^2.5.0",
        "uuid": "^3.3.3",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/async": "^3.0.2",
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/bluebird": "^3.5.27",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.3",
        "@types/compression": "^1.0.1",
        "@types/concurrently": "^4.1.0",
        "@types/connect-mongo": "^0.0.43",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^6.1.1",
        "@types/errorhandler": "^0.0.32",
        "@types/eslint": "^6.1.1",
